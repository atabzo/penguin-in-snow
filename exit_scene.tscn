script/source = "extends Sprite2D

# Simple Star Pulse: Enlarge → Normal → Repeat
# Attach to a Sprite2D with a star texture

@export var max_scale = 1.10
@export var pulse_duration = 1.0  # Time for one complete pulse

func _ready():
	scale = Vector2(1.0, 1.0)
	_start_pulse_animation()

func _start_pulse_animation():
	var tween = create_tween()
	tween.set_loops()  # Loop forever
	tween.set_trans(Tween.TRANS_SINE)
	tween.set_ease(Tween.EASE_IN_OUT)
	
	# Enlarge
	tween.tween_property(self, \"scale\", Vector2(max_scale, max_scale), pulse_duration / 2.0)
	# Return to normal
	tween.tween_property(self, \"scale\", Vector2(1.0, 1.0), pulse_duration / 2.0)
"

